{
  "name": "pm2-elk-sync",
  "version": "0.0.1",
  "description": "Sync pm2 logs to elasticsearch",
  "main": "app.js",
  "dependencies": {
    "pmx" : "0.6.8",
    "elasticsearch": "12.0.1",
    "pm2" : "2.0.18"
  },
  "repository": {
    "type": "git"
  },
  "config" : {
    "elasticsearch_host" : "http://localhost:9200",
    "elasticsearch_index" : "logs",
    "app_name" : "all"
  },
  "apps" : [{
    "merge_logs"         : true,
    "max_memory_restart" : "200M",
    "script"             : "app.js"
  }],
  "license": "MIT"
}
